<div id="intro-heading-row" class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <h1 id="intro-heading"><a href="<%= root_path %>">Shelfie</a></h1>
    <h2 id="intro-sub-heading">Showcase what you've read. Make a shelfie.</h2>
  </div>
  <div class="col-md-4"></div>
</div>
<div class="row">
  <div class="hidden-xs col-sm-1 col-md-2"></div>
  <div class="hidden-xs col-sm-5 col-md-4">
    <%= render 'users/form' %>
  </div>
  <div class="hidden-xs col-sm-5 col-md-4">
    <%= render 'sessions/form' %>
  </div>
  <div class="hidden-xs col-sm-1 col-md-2"></div>
  <div class="col-xs-12 hidden-sm hidden-md hidden-lg" id="home-xs-forms">
    <div id="login-xs">
      <%= render 'sessions/form' %>
      <p>Don't have an account? <a href="#" id="signup-toggle">Sign up!</a></p>
    </div>
    <div id="signup-xs">
      <%= render 'users/form' %>
    </div>
  </div>
</div>
<div class="row">
  <div id="intro-graphic" class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2" >
    <%= image_tag("books.png") %>
  </div>
</div>
