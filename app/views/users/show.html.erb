<div class="row">

<!--************************
    Profile Information
*************************-->
  <div id="profile-card" class="col-xs-12 col-md-2">
    <%= image_tag @user.avatar.url(:large), class: "img-rounded profile-img" %>
    <div id="profile-info">
      <h1><%= @user.username %></h1>
      <%= render 'relationships/stats' %>
      <%= render 'follow_form' if logged_in? %>
    </div>
  </div>

<!--************************
         Bookshelf
*************************-->
  <div id="bookshelf" class="col-xs-12 col-md-10">
    <ul id="tool-bar">
      <li><a href="#">Sort <span class="caret"></span></a></li>
      <li id="stats"><a href="#" data-toggle="modal" data-target="#myModal">Stats</a></li>
    </ul>
    <% if flash.any? %>
      <div class="alert alert-success alert-dismissible" id="alert-add-books" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        Welcome to Shelfie! <a href="#" class="alert-link" data-toggle="modal" data-target="#myModal"><%= notice %></a> to get started!
      </div>
    <% end %>
    <% @books.each do |book| %>
      <a href="<%= book_path(book) %>" class="book user-book">
        <img src="<%= book.cover_small %>">
      </a>
    <% end %>
  </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content modal-search">
      <div class="modal-header search-header">
        <%= form_tag(books_path, :method => "get", id: "search-form") do %>
          <div class="input-group">
            <input name="search" type="text" class="form-control" id="search-books-input" placeholder="Search books">
            <span class="input-group-btn">
              <button id="search-books-button" class="btn btn-default" type="button">Go</button>
            </span>
          </div>
        <% end %>
      </div>
      <div class="modal-body" id="search-results">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div> <!-- modal-content -->
  </div> <!-- modal-dialog -->
</div> <!-- modal -->
  