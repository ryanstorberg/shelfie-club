<div id="profile-header">
  <%= image_tag @user.avatar.url(:large) %>
  <div id="profile-information">
    <h1><%= @user.username %></h1>
    <%= render 'relationships/stats' %>
    <%= render 'follow_form' if logged_in? %>
  </div>
</div>

<div id="book-nav-bar"></div>

<div class="profile-bookshelf">
  <% @books.each do |book| %>
    <div class="book">
      <a href=""><img src="<%= book.cover_small %>"></a>
    </div>
  <% end %>
  <div class="book">
    <a href="<%= books_path %>" title="Add a book"><img src="<%= image_path("book.png") %>" alt=""></a>
  </div>
</div>
