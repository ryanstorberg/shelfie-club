<h4>Sign up</h4>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
      <ul class="alert-list">
      <% @user.errors.full_messages.each do |message| %>
        <li class="alert alert-danger error" role="alert"><%= message %></li>
      <% end %>
      </ul>
  <% end %>

  <%= f.text_field :username, placeholder: 'Username', class: "form-control" %><br>

  <%= f.text_field :email, placeholder: 'Email', class: "form-control" %><br>

  <%= f.password_field :password, placeholder: 'Password', class: "form-control" %><br>

  <%= f.file_field :avatar %>
  <p class="help-block">Upload a profile image.</p>

  <div class="actions">
    <%= f.submit 'Sign up', class: "btn btn-default" %>
  </div>
<% end %>
