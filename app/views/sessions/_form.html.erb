<h4>Log in</h4>
<%= form_for(:session, url: sessions_path) do |f| %>
  <% if flash.any? %>
    <p class="alert alert-danger error" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> 
      <%= notice %>
    </p>
  <% end %>
	<%= f.text_field :email, placeholder: 'Email', autofocus: true, class: "form-control" %><br>
	<%= f.password_field :password, placeholder: 'Password', class: "form-control" %><br>
  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-default" %>
  </div>
<% end %>
